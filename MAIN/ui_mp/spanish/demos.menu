		rect $evalfloat(.5*WINDOW_WIDTH-60) $evalint(WINDOW_HEIGHT-23) 120 17
		textalign 1
		textalignx 60
		textaligny 12
		textfont UI_FONT_NORMAL
		textscale T_SCALE1

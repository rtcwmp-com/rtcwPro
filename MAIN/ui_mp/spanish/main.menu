		visible 1			// Visible on open
		focusColor .9 .3 .3 .8	// Menu focus color for text and items
		onESC { show mainmenus }
		onOpen {
			setitemcolor fadebox backcolor 0 0 0 1; fadeout fadebox;
			show mainmenus; uiScript stopRefresh; checkautoupdate }

